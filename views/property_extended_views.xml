<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Tree View for PropertyExtended -->
    <record id="view_property_extended_tree" model="ir.ui.view">
        <field name="name">real.estate.property.extended.tree</field>
        <field name="model">real.estate.property</field>
        <field name="inherit_id" ref="real_state.view_property_tree"/>  
        <field name="arch" type="xml">
            <field name="price"  position="after">
                 <field name="code"/>
            </field>
        </field>
    </record>

    <!-- Form View for PropertyExtended -->
    <record id="view_property_extended_form" model="ir.ui.view">
        <field name="name">real.estate.property.extended.form</field>
        <field name="model">real.estate.property</field>
        <field name="inherit_id" ref="real_state.view_property_form"/>  
        <field name="arch" type="xml">
            <field name="price"  position="after">
                 <field name="code"/>
            </field>
        </field>
    </record>

    <!-- Search View for PropertyExtended -->
    <record id="view_property_extended_search" model="ir.ui.view">
        <field name="name">real.estate.property.extended.search</field>
        <field name="model">real.estate.property</field>
        <field name="inherit_id" ref="real_state.view_property_search"/> 
        <field name="arch" type="xml">
            <field name="postcode"  position="after">
                 <field name="code"/>
            </field>
        </field>
    </record>
</odoo>